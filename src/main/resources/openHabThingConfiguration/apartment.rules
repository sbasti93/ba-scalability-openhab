var Number office_group_counter1=0
var Number office_group_counter2=0
var Number office_group_counter3=0

rule "> 23Â° Heizung aus"
when
    Item Wohnraum1_Temperature received update
    Item Wohnraum2_Temperature received update
    Item Wohnraum3_Temperature received update
then

    if(Wohnraum1_Temperature.state>23 && office_group_counter==0){
        Wohnraum1_Heater.sendCommand(0)
        office_group_counter=1
    }
    else if(Wohnraum1_Temperature.state<23 && office_group_counter==1){
        office_group_counter1=0
    }

    if(Wohnraum2_Temperature.state>23 && office_group_counter==0){
        Wohnraum2_Heater.sendCommand(0)
        office_group_counter=2
    }
    else if(Wohnraum2_Temperature.state<23 && office_group_counter==2){
        office_group_counter2=0
    }

    if(Wohnraum3_Temperature.state>23 && office_group_counter==0){
        Wohnraum3_Heater.sendCommand(0)
        office_group_counter=3
    }
    else if(Wohnraum3_Temperature.state<23 && office_group_counter==3){
        office_group_counter3=0
    }
end
